@model IEnumerable<PracticingMVC.Models.Employee>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(x => x.EmployeeId)</th>
        <th>@Html.DisplayNameFor(x => x.Name)</th>
        <th>@Html.DisplayNameFor(x => x.Age)</th>
        <th>@Html.DisplayNameFor(x => x.Desgination)</th>
        <th>@Html.DisplayNameFor(x => x.JoiningDate)</th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(x => item.EmployeeId)</td>
            <td>@Html.DisplayFor(x => item.Name)</td>
            <td>@Html.DisplayFor(x => item.Age)</td>
            <td>@Html.DisplayFor(x => item.Desgination)</td>
            <td>@Html.DisplayFor(x => item.JoiningDate)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeId })
            </td>
        </tr>
        <br />
    }
</table>
